<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/anchor_title"
        android:layout_centerInParent="true"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:background="@drawable/anchor_coner">
        <ImageView
            android:id="@+id/anchor_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            />
        <com.cangwang.base.ui.CircleImageView
            android:id="@+id/anchor_card_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/anchor_img"/>
        <TextView
            android:id="@+id/anchor_card_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/anchor_card_img"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="Cangwang"/>

        <TextView
            android:id="@+id/anchor_card_blog_txt"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/anchor_card_name"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:text="博客地址"/>

        <TextView
            android:id="@+id/anchor_card_blog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/anchor_card_blog_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="https://github.com/cangwang"
            android:textSize="15dp" />
    </RelativeLayout>
</RelativeLayout>
